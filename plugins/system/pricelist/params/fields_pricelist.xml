<form>
    <fields name="params">
        <fieldset name="renderoptions" label="COM_FIELDS_FIELD_RENDEROPTIONS_HEADING">
            <field
                    name="showlabel"
                    type="radio"
                    label="COM_FIELDS_FIELD_SHOWLABEL_LABEL"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>

            <field
                    name="display"
                    type="list"
                    label="COM_FIELDS_PRICELIST_FIELD_DISPLAY_LABEL"
                    default="2"
                    validate="options"
            >
                <option value="0">COM_FIELDS_PRICELIST_DISPLAY_BEFORE_NAME</option>
                <option value="1">COM_FIELDS_PRICELIST_DISPLAY_AFTER_NAME</option>
                <option value="2">COM_FIELDS_PRICELIST_DISPLAY_BEFORE_PRICE</option>
                <option value="3">COM_FIELDS_PRICELIST_DISPLAY_AFTER_PRICE</option>
            </field>

            <field name="width"
                   type="text"
                   default="100px"
                   label="COM_FIELDS_PRICELIST_WIDTH_LABEL"
                   description="COM_FIELDS_PRICELIST_WIDTH_DESC"
            />

            <field
                    name="align"
                    type="list"
                    label="COM_FIELDS_PRICELIST_FIELD_ALIGN_LABEL"
                    description="COM_FIELDS_PRICELIST_FIELD_ALIGN_DESC"
                    default="none"
            >
                <option value="none">COM_FIELDS_PRICELIST_ALIGN_NONE_NAME</option>
                <option value="left">COM_FIELDS_PRICELIST_ALIGN_LEFT_NAME</option>
                <option value="center">COM_FIELDS_PRICELIST_ALIGN_CENTER_NAME</option>
                <option value="right">COM_FIELDS_PRICELIST_ALIGN_RIGHT_NAME</option>
            </field>
        </fieldset>
    </fields>
</form>